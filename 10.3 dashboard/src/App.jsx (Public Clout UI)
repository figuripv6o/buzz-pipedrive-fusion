import { useEffect, useState } from "react";
import { fetchLeads, fetchDeals } from "./api.js";

function Pill({ label }) {
  return (
    <span className="px-2 py-1 rounded-full text-[10px] border border-sky-500/40 bg-sky-500/10 text-sky-100">
      {label}
    </span>
  );
}

function Card({ title, subtitle, badgeLeft, badgeRight }) {
  return (
    <article className="bg-slate-900 border border-slate-800 rounded-2xl p-4 flex flex-col gap-2 shadow-lg shadow-sky-900/20">
      <header className="flex justify-between items-center gap-2">
        <h2 className="font-semibold text-sm line-clamp-2">{title}</h2>
        <span className="text-[10px] text-slate-500 uppercase tracking-wide">
          {badgeRight}
        </span>
      </header>
      <p className="text-xs text-slate-400 line-clamp-3">{subtitle}</p>
      <footer className="mt-2 flex justify-between items-center">
        <Pill label={badgeLeft} />
        <span className="text-[10px] text-slate-500">
          BuzzFlow Engine • FDF
        </span>
      </footer>
    </article>
  );
}

export default function App() {
  const [tab, setTab] = useState("leads");
  const [leads, setLeads] = useState([]);
  const [deals, setDeals] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    (async () => {
      setLoading(true);
      const [l, d] = await Promise.all([fetchLeads(), fetchDeals()]);
      setLeads(l);
      setDeals(d);
      setLoading(false);
    })();
  }, []);

  const items = tab === "leads" ? leads : deals;

  return (
    <div className="min-h-screen bg-slate-950 text-slate-50 flex flex-col">
      <header className="border-b border-slate-800 px-6 py-4 flex items-center justify-between">
        <div>
          <h1 className="text-2xl font-bold tracking-tight">
            BuzzFlow CRM Engine
          </h1>
          <p className="text-xs text-slate-400">
            Standalone Pipedrive ↔ Firebase ↔ React stack. No ties. All drip.
          </p>
        </div>
        <div className="flex gap-2 text-[10px]">
          <Pill label="FDF Certified™" />
          <Pill label="Secret Sauce XL" />
          <Pill label="Public Ready" />
        </div>
      </header>

      <main className="flex-1 p-6">
        <div className="flex gap-2 mb-4 text-xs">
          <button
            onClick={() => setTab("leads")}
            className={`px-3 py-1 rounded-full border ${
              tab === "leads"
                ? "bg-sky-600 border-sky-400"
                : "bg-slate-900 border-slate-700"
            }`}
          >
            Leads
          </button>
          <button
            onClick={() => setTab("deals")}
            className={`px-3 py-1 rounded-full border ${
              tab === "deals"
                ? "bg-sky-600 border-sky-400"
                : "bg-slate-900 border-slate-700"
            }`}
          >
            Deals
          </button>
        </div>

        {loading ? (
          <div className="text-slate-400 text-xs">Warming up the hive…</div>
        ) : items.length === 0 ? (
          <div className="text-slate-400 text-xs">
            No {tab} yet. Wire a form, send a webhook, and watch the Buzz.
          </div>
        ) : (
          <div className="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
            {items.map((item) => (
              <Card
                key={item.id}
                title={item.title || item.org_name || item.person_name || "Untitled"}
                subtitle={
                  item.stage_name
                    ? `Stage: ${item.stage_name}`
                    : item.status
                    ? `Status: ${item.status}`
                    : "No extra details yet."
                }
                badgeLeft={item.buzzflow_tier || "Lead"}
                badgeRight={tab === "leads" ? "Lead" : "Deal"}
              />
            ))}
          </div>
        )}
      </main>
    </div>
  );
}
