// apps/buzzforge-crm-dashboard/src/App.jsx
import { useEffect, useState } from "react";

function fetchBuzzDeals() {
  return fetch("/api/buzzcrm/deals").then(res => res.json());
}

function fetchBuzzLeads() {
  return fetch("/api/buzzcrm/leads").then(res => res.json());
}

export default function App() {
  const [tab, setTab] = useState("leads");
  const [leads, setLeads] = useState([]);
  const [deals, setDeals] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    async function load() {
      setLoading(true);
      const [l, d] = await Promise.all([fetchBuzzLeads(), fetchBuzzDeals()]);
      setLeads(l.items || []);
      setDeals(d.items || []);
      setLoading(false);
    }
    load();
  }, []);

  const items = tab === "leads" ? leads : deals;

  return (
    <div className="min-h-screen bg-slate-950 text-slate-50 flex flex-col">
      <header className="border-b border-slate-800 px-6 py-4 flex justify-between items-center">
        <div>
          <h1 className="text-2xl font-semibold tracking-tight">
            BuzzForge CRM Panel
          </h1>
          <p className="text-sm text-slate-400">
            Pipedrive × BuzzTier fusion — read-only snapshot from Firestore.
          </p>
        </div>
        <div className="flex gap-2 text-xs">
          <span className="px-2 py-1 rounded-full bg-emerald-500/10 text-emerald-300 border border-emerald-500/40">
            FDF Certified
          </span>
          <span className="px-2 py-1 rounded-full bg-sky-500/10 text-sky-300 border border-sky-500/40">
            BuzzFlow E2E
          </span>
        </div>
      </header>

      <main className="flex-1 p-6">
        <div className="flex gap-2 mb-4">
          <button
            onClick={() => setTab("leads")}
            className={`px-3 py-1 rounded-lg text-sm border ${
              tab === "leads"
                ? "bg-sky-600 border-sky-400"
                : "bg-slate-900 border-slate-700"
            }`}
          >
            Leads
          </button>
          <button
            onClick={() => setTab("deals")}
            className={`px-3 py-1 rounded-lg text-sm border ${
              tab === "deals"
                ? "bg-sky-600 border-sky-400"
                : "bg-slate-900 border-slate-700"
            }`}
          >
            Deals
          </button>
        </div>

        {loading ? (
          <div className="text-slate-400 text-sm">Loading Buzz data…</div>
        ) : items.length === 0 ? (
          <div className="text-slate-400 text-sm">
            No {tab} found. Connect Pipedrive or wait for sync.
          </div>
        ) : (
          <div className="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
            {items.map((item) => (
              <article
                key={item.id}
                className="bg-slate-900 border border-slate-800 rounded-2xl p-4 flex flex-col gap-2"
              >
                <header className="flex justify-between items-center">
                  <h2 className="font-semibold text-sm line-clamp-2">
                    {item.title || item.org_name || item.person_name || "Untitled"}
                  </h2>
                  <span className="text-xs text-slate-400">
                    #{item.id}
                  </span>
                </header>
                <div className="text-xs text-slate-400 space-y-1">
                  {item.value && (
                    <p>
                      Value: {item.value} {item.currency || "USD"}
                    </p>
                  )}
                  {item.stage_name && <p>Stage: {item.stage_name}</p>}
                  {item.status && <p>Status: {item.status}</p>}
                </div>
                <footer className="mt-2 flex justify-between items-center text-[11px] text-slate-500">
                  <span>
                    Source: {item.buzz_app || item.source || "Unknown"}
                  </span>
                  <span>
                    Tier: {item.buzz_tier || "-"}
                  </span>
                </footer>
              </article>
            ))}
          </div>
        )}
      </main>
    </div>
  );
}
